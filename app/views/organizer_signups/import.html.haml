= content_for :sidebar do
  = render 'layouts/vertical_progress', 
    steps: {"Sign Up" => {status: "complete", info: "Basic information about you", last: 'no'} ,
    "Organization Info" => {status: "complete", info: "A few facts about your group", last: 'no'},
    "Fundraiser Info" => {status: "complete", info: "How much, why, and when you are fundraising", last: 'yes'}}

.flex.min-h-full.w-full.flex-col.justify-center.py-10.sm:py-3.sm:px-6.lg:px-8.bg-white
  .mt-5.sm:mx-auto.w-full.sm:w-full.sm:max-w-md.p-8.sm:p-1
    %div.pt-1
      %button.rounded-md.border.border-red-600.px-20.py-2.w-full.text-sm.font-semibold.text-red-400.bg-red-100.hover:bg-red-50.cursor-pointer{type: "button"}
        = link_to "Import Members from TroopTrack", @trooptrack
    .pt-8
      %button.rounded-md.border.border-orange-400.px-20.py-2.w-full.text-sm.font-semibold.text-orange-600.bg-orange-100.hover:bg-orange-50.cursor-pointer{type: "button"}
        = link_to "Import Members from a File", new_file_import_organizer_signup_path(@campaign)
    .pt-8
      %button.bg-indigo-900.text-white.px-20.py-2.w-full.text-sm.font-semibold.rounded-lg.hover:bg-indigo-700.cursor-pointer{type: "button"}
        = link_to "Import Members Later", campaign_path(@campaign)
