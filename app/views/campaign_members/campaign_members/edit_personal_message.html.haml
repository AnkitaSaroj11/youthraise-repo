= content_for :sidebar do
  = render '/campaign_members/dashboards/campaign_info'
.isolate.overflow-hidden.rounded-xl.border.border-slate-200
  .border-b.border-slate-200
    .text-xl.font-semibold.leading-5.text-black.p-5
      Edit Your Message
  .border-slate-200
    = form_for @personal_message, url: update_personal_message_campaign_member_path(@campaign_member) do |f|
      .p-5.text-slate-700.text-md
        = f.text_area :message, required: true, autofocus: true, rows: 15
      .p-5
        = f.submit "Update Personal Message"
