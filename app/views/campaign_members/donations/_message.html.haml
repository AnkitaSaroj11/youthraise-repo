.pt-8.sm:inline-block.sm:w-full.sm:px-4
  %figure.rounded-2xl.bg-gray-50.p-8.text-sm.leading-6
    .text-lg.font-style-strong.text-indigo-800
      #{message.masked_name} donated #{number_to_currency(message.amount, precision: 0)}
    - if message.donor_level && !message.donor_level.name.blank?
      %span.inline-flex.items-center.rounded-full.bg-indigo-100.px-3.py-0.5.text-sm.font-medium.text-indigo-800
        - if message.donor_level.has_star?
          %i.fa-solid.fa-star.pr-2
        - if message.donor_level.name
          = message.donor_level.name
        - if message.donor_level.has_star?
          %i.fa-solid.fa-star.pl-2
    .text-sm.text-gray-500 Supporting #{message.campaign_member.name} - #{distance_of_time_in_words_to_now(message.created_at)} ago
    %blockquote.text-gray-900.italic
      %p= message.message
    
        
